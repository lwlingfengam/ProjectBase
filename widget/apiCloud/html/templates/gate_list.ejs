<div class="list-block">
    <div class="list-block-header clearfix" style="margin-bottom: 10px;">
        <span class="title">
            <img class="icon" src="../image/home/nav/shape_zhamen.png" alt=""><%= gate_name %>
        </span>
        <div class="agc">
            <span class="label label-success">
                <%= gateinfo_runmodel %>
            </span>
            <span class="label label-danger" style="margin-left: 5px;"><%= fault_warning %></span>
        </div>
    </div>
    <div class="list-block-main">
        <div class="media">
            <div class="media-left">
                <img src="../image/gate/<%= gate_sn %>.jpg" style="width: 119px; height: 119px;">
            </div>
            <div class="media-body">
                <div class="row">
                    <div class="text-left">闸前水位：</div>
                    <div class="flex-1 text-left"><em><%= gateinfo_beforewtl %></em>m</div>
                </div>
                <div class="row">
                    <div class="text-left">闸后水位：</div>
                    <div class="flex-1 text-left"><em><%= gateinfo_afterwtl %></em>m</div>
                </div>
                <div class="row">
                    <div class="text-left">过闸流量：</div>
                    <div class="flex-1 text-left"><em><%= gateinfo_instantaneouswtl %></em>m³/s</div>
                </div>
                <div class="row">
                    <div class="text-left">当前开度：</div>
                    <div class="flex-1 text-left"><em><%= gateinfo_zmkd %></em>mm</div>
                </div>
                <div class="row">
                    <div class="text-left">本轮调水流量：</div>
                    <div class="flex-1 text-left"><em><%= gateinfo_thetotalwtl %></em>m³</div>
                </div>
            </div>
        </div>
        <div class="line-dotted"></div>
        <div class="row">
            <div class="text-left">启闭状态：</div>
            <div class="flex-1 text-left"><strong><%= gate_state %></strong></div>
        </div>
    </div>
    <div class="line-dotted"></div>
    <div class="list-block-footer clearfix">
        <div class="pull-right">
            <button class="btn red" tapmode="highlight" onclick="openGroupFrames('<%= gate_sn %>', '<%= gate_name %>');">急停</button>
            <button class="btn" tapmode="highlight" onclick="openGroupFrames('<%= gate_sn %>', '<%= gate_name %>');">控制</button>
        </div>
    </div>
</div>